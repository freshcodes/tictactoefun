{
  "private": true,
  "name": "TicTacToe.Fun",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Fresh Codes <hello@fresh.codes> (https://fresh.codes/)",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --no-sw --template src/template.html --no-prerender",
    "serve": "preact build --no-sw --template src/template.html --no-prerender && preact serve",
    "dev": "preact watch --template src/template.html",
    "lint": "eslint --fix src *.js",
    "test": "jest ./tests"
  },
  "eslintConfig": {
    "globals": {
      "localStorage": true,
      "self": true,
      "workbox": true,
      "alert": true
    },
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "settings": {
      "react": {
        "pragma": "h"
      }
    },
    "env": {
      "jest": true
    },
    "rules": {
      "react/jsx-no-bind": [
        "error",
        {
          "allowArrowFunctions": true,
          "allowBind": false,
          "ignoreRefs": true
        }
      ],
      "react/no-unknown-property": 0,
      "react/no-did-update-set-state": 2,
      "react/react-in-jsx-scope": 2,
      "react/prop-types": 0
    }
  },
  "eslintIgnore": [
    "build/*",
    "node_modules/*",
    "functions/node_modules/*"
  ],
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint-config-synacor": "^3.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-preset-preact": "^1.0.0",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-rc.6",
    "preact-render-spy": "^1.2.1",
    "serve": "^11.1.0"
  },
  "dependencies": {
    "geopattern": "^1.2.3",
    "peerjs": "^1.1.0",
    "preact": "^10.0.1",
    "preact-render-to-string": "^5.1.0",
    "preact-router": "^3.0.0",
    "unistore": "^3.5.0",
    "workbox-webpack-plugin": "^4.1.1"
  },
  "browserslist": [
    "> 5%",
    "last 2 versions",
    "Firefox ESR",
    "not android <= 4.4",
    "not ie <= 11",
    "not ie_mob <= 11",
    "not bb <= 10",
    "not op_mob <= 12.1"
  ],
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
